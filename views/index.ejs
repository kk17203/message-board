<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <a href="/new">New Message Page</a>
        <a href="/users">Users Page</a>
        <h1><%= title %></h1>
        <p>Welcome to <%= title %></p>

        <% messages.forEach(function(message) { %>
        <div>
            <h2><%= message.user %></h2>
            <p><%= message.text %></p>
            <small><%= message.added.toISOString() %></small>
        </div>
        <% }); %>
    </body>
</html>
